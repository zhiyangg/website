---
import experiences from "../data/experience.ts";
import projects from "../data/projects.ts";

const avatar = "../website/imgs/profile2.jpg"; 
const websiteIcon = "../website/svg/uoft.png";
const githubLink = "https://github.com/zhiyangg";
const linkedinLink = "https://www.linkedin.com/in/zhiyangc/";

const githubIcon = "../website/svg/square-github-brands.svg";
const linkedinIcon = "../website/svg/linkedin-brands-solid.svg";
---

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href={websiteIcon}>
    <title>Zhi Yang Chen</title>
</head>

<html lang="en" class="scroll-smooth">
<body class="bg-[#F7F7F7] text-[#333333]">
    <section id="about" class="h-screen flex flex-col md:flex-row items-center justify-between px-12 md:px-28 text-white bg-[#0a192f]">
        <!-- Left Side: Introduction -->
        <div class="text-left space-y-6 max-w-xl">
            <span class="bg-gray-700 text-white text-sm font-semibold px-4 py-2 rounded-full">
                Software Engineer &bull; Tech Enthusiast &bull; Car Aficionado
            </span>
    
            <h1 class="text-4xl sm:text-3xl md:text-5xl lg:text-6xl font-bold">
                Hi! My name is <br> 
                <span class="text-[#1E40AF]">Zhi Yang Chen</span>
            </h1>

            <div class="overflow-hidden whitespace-nowrap border-r-2 border-orange-500 animate-typing max-w-[50ch]">
                <h1 class="text-lg text-gray-300 inline-block">Computer Engineering Student @ University of Toronto</h1>
            </div>
              
            <div class="flex space-x-6 mt-6">
                <a href="#experience" class="px-8 py-4 text-lg bg-[#1E3A8A] text-white font-semibold rounded-lg shadow-md hover:bg-[#1E40AF] transition">
                    Experience
                </a>
                <a href="#projects" class="px-8 py-4 text-lg border border-white text-white font-semibold rounded-lg hover:bg-gray-800 transition">
                    Projects
                </a>
            </div>
        </div>
    
        <!-- Right Side: Avatar -->
        <div class="w-96 h-96 rounded-3xl overflow-hidden">
            <img src={avatar} alt="Avatar" class="w-full h-full object-cover object-[90%_70%] object-top">
        </div>
    </section>    

    <!-- Main Layout (Sidebar + Content) -->
    <div class="flex max-w-7xl mx-auto px-6 gap-x-12 items-start">
        
        <!-- Left Sidebar (1/3 Screen) -->
        <aside class="w-1/4 h-[50rem] sticky top-0 flex flex-col gap-y-6 pt-20">
            <div><h1 class="text-4xl font-bold leading-tight text-[#0A192F]">Zhi Yang Chen</h1></div>

            <!-- Navigation Links -->
            <nav class="space-y-4">
                <a href="#about" class="block text-gray-600 hover:text-[#1E3A8A] transition">About</a>
                <a href="#experience" class="block text-gray-600 hover:text-[#1E3A8A] transition">Experience</a>
                <a href="#projects" class="block text-gray-600 hover:text-[#1E3A8A] transition">Projects</a>
            </nav>

            <!-- Social Icons -->
            <div class="flex space-x-4">
                <a href={githubLink} target="_blank" rel="noopener noreferrer">
                    <img src={githubIcon} alt="GitHub" class="w-8 h-8 inline-block hover:opacity-80 transition">
                </a>
                <a href={linkedinLink} target="_blank" rel="noopener noreferrer">
                    <img src={linkedinIcon} alt="LinkedIn" class="w-8 h-8 inline-block hover:opacity-80 transition">
                </a>
            </div>
        </aside>

        <!-- Right Content (2/3 Screen) -->
        <main class="w-3/4 py-20 space-y-20">
            <!-- Experience Section -->
            <section id="experience">
                <div class="space-y-8">
                    {experiences.filter(exp => exp.showcase).map((exp) => (
                        <a href={exp.companyLink} target="_blank" rel="noopener noreferrer" class="block">
                            <div class="flex flex-col md:flex-row items-center gap-6 bg-white p-6 rounded-lg shadow-lg hover:bg-[#E3E3E3] transition">
                                <!-- Experience Image -->
                                <div class="w-full md:w-1/3">
                                    <img src={exp.image} alt={exp.title} class="w-full h-40 object-cover rounded-lg shadow-md">
                                </div>
                                <!-- Experience Details -->
                                <div class="w-full md:w-2/3 space-y-3">
                                    <p class="text-sm text-gray-500">{exp.date}</p>
                                    <h3 class="text-2xl font-semibold text-[#0A192F]">{exp.title}</h3>
                                    <p class="text-lg font-medium text-[#1E3A8A]">{exp.company}</p>
                                    <p class="text-gray-700 text-sm">{exp.summary}</p>
                                    <p class="text-gray-600 text-xs">{exp.technologies}</p>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </section>

            <!-- Projects Section -->
            <section id="projects">
                <h2 class="text-4xl font-bold mb-10 text-[#0A192F]">Projects</h2>
                <div class="space-y-12">
                    {projects.filter(proj => proj.showcase).map((proj) => (
                        <a href={proj.projectLink} target="_blank" rel="noopener noreferrer" class="block">
                            <div class="flex flex-col md:flex-row items-center gap-6 bg-white p-6 rounded-lg shadow-lg hover:bg-[#E3E3E3] transition">
                                <!-- Project Image (Fixed Size) -->
                                <div class="w-full md:w-1/3">
                                    <img src={proj.image} alt={proj.title} class="w-full h-40 object-cover rounded-lg shadow-md">
                                </div>
                                <!-- Project Details -->
                                <div class="w-full md:w-2/3 space-y-3">
                                    <h3 class="text-2xl font-semibold text-[#0A192F]">{proj.title}</h3>
                                    <p class="text-gray-700 text-sm">{proj.summary}</p>
                                    <p class="text-gray-600 text-xs">{proj.technologies}</p>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </section>
        </main>
    </div>
</body>
</html>