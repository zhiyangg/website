                'RAIN': 'ðŸŒ§ï¸',
                'HEAVY_RAIN': 'ðŸŒ§ï¸',
                'LIGHT_SNOW': 'ðŸŒ¨ï¸',
                'SNOW': 'â„ï¸',
                'HEAVY_SNOW': 'â„ï¸',
                'FLURRIES': 'ðŸŒ¨ï¸',
                'THUNDERSTORM': 'â›ˆï¸',
                'HAIL': 'ðŸŒ¨ï¸',
                'SLEET': 'ðŸŒ¨ï¸',
                'WINDY': 'ðŸ’¨'
            };
            
            const weatherType = data.weatherCondition.type;
            const icon = weatherIcons[weatherType] || 'ðŸŒ¡ï¸';
            
            const iconElement = document.getElementById('weather-icon');
            if (iconElement) {
