---
import { Image } from 'astro:assets';
import experiences from "../data/experience.ts";
import projects from "../data/projects.ts";

import avatarImage from '../assets/imgs/profile2.jpg';
import websiteIcon from "../assets/imgs/uoft.png";
import githubIcon from "../assets/svg/square-github-brands.svg";
import linkedinIcon from "../assets/svg/linkedin-brands-solid.svg";

const githubLink = "https://github.com/zhiyangg";
const linkedinLink = "https://www.linkedin.com/in/zhiyangc/";
---

<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preload" type="image/png" href={websiteIcon.src}>
    <title>Zhi Yang Chen</title>

    <!-- Open Graph -->
    <meta property="og:title" content="Zhi Yang Chen" />
    <meta property="og:description" content="Computer Engineering Student @ University of Toronto" />
    <meta property="og:image" content="https://zhiyangchen.dev/banner.png" />
    <meta property="og:url" content="https://zhiyangchen.dev" />
    <meta property="og:type" content="website" />

    <!-- X/Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Zhi Yang Chen" />
    <meta name="twitter:description" content="Computer Engineering Student @ University of Toronto" />
    <meta name="twitter:image" content="https://zhiyangchen.dev/banner.png" />
</head>

<body class="bg-[#F7F7F7] text-[#333333] m-0 p-0">
    <section id="about" class="flex items-center justify-center h-screen w-full bg-[#0A192F]">
        <div class="flex flex-col-reverse shortHeight:flex-row-reverse lg:flex-row-reverse items-center justify-center lg:max-h-[95vh] px-4 gap-y-4 shortHeight:gap-x-8 lg:gap-x-24">
            <!-- Left Side: Introduction -->
            <div class="max-w-lg text-center space-y-4">

                <!-- Badge -->
                <span class="inline-block px-3 py-1 text-[0.7rem] font-semibold text-white bg-gray-700 rounded-full">
                    Software Engineer &bull; Tech Hobbyist &bull; Car Enthusiast
                </span>
        
                <!-- Name & Title -->
                <h1 class="text-4xl lg:text-5xl font-bold leading-tight text-[#FFFFFF]">
                    Hi! My name is <br> 
                    <span class="text-[#1E40AF]">Zhi Yang Chen</span>
                </h1>
        
                <!-- Animated Typing Text -->
                <div class="max-w-[58ch] mx-auto overflow-hidden whitespace-nowrap border-r-2 border-gray-500 animate-typing">
                    <h1 class="text-sm md:text-md lg:text-lg text-gray-300 inline">
                        Computer Engineering Student @ University of Toronto
                    </h1>
                </div>

                <!-- Buttons -->
                <div class="flex flex-col justify-center mt-6 space-y-3">
                    <a href="#experience" class="px-6 py-3 text-md font-semibold text-white bg-[#1E3A8A] rounded-lg shadow-md transition">
                        Experience
                    </a>
                    <a href="#projects" class="px-6 py-3 text-md font-semibold text-white border border-white rounded-lg transition">
                        Projects
                    </a>
                </div>            
            </div>
        
            <!-- Right Side: Avatar -->
            <div class="w-96 h-96 shortHeight:w-80 shortHeight:h-80 overflow-hidden rounded-3xl shadow-lg">
                <Image 
                    src={avatarImage} 
                    alt="Avatar" 
                    loading="eager"
                    class="w-full h-full object-cover" 
                />
            </div>
        </div>
    </section>    

    <!-- Main Layout (Sidebar + Content for lg and larger, just content for md and smaller) -->
    <div class="flex max-w-7xl mx-auto px-6 gap-x-12 items-start">
        
        <!-- Left Sidebar (1/3 Screen for lg and larger, hidden for md and smaller) -->
        <aside class="hidden lg:block w-1/4 h-[50rem] sticky top-0 flex flex-col gap-y-6 pt-20">
            <div><h1 class="text-4xl font-bold leading-tight text-[#0A192F]">Zhi Yang Chen</h1></div>

            <!-- Navigation Links -->
            <nav class="space-y-4 mt-4">
                <a href="#about" class="block text-gray-600 hover:text-[#1E3A8A] transition">About</a>
                <a href="#experience" class="block text-gray-600 hover:text-[#1E3A8A] transition">Experience</a>
                <a href="#projects" class="block text-gray-600 hover:text-[#1E3A8A] transition">Projects</a>
            </nav>

            <!-- Social Icons -->
            <div class="flex space-x-4 mt-4">
                <a href={githubLink} target="_blank" rel="noopener noreferrer">
                    <Image
                        src={githubIcon}
                        alt="GitHub Icon"
                        class="w-8 h-8 inline-block hover:opacity-80 transition"
                    />
                </a>
                <a href={linkedinLink} target="_blank" rel="noopener noreferrer">
                    <Image
                        src={linkedinIcon}
                        alt="Linkedin Icon"
                        class="w-8 h-8 inline-block hover:opacity-80 transition"
                    />
                </a>
            </div>
        </aside>

        <!-- Right Content (2/3 Screen for lg and larger, fullwidth for md and smaller) -->
        <main class="w-full lg:w-3/4 py-20 space-y-20">
            <!-- Experience Section -->
            <section id="experience">
                <div class="space-y-8">
                    {experiences.filter(exp => exp.showcase).map((exp) => (
                        <a href={exp.companyLink} target="_blank" rel="noopener noreferrer" class="block">
                            <div class="flex flex-col md:flex-row items-center gap-6 bg-white p-6 rounded-lg shadow-lg hover:bg-[#E3E3E3] transition">
                                <!-- Experience Image -->
                                <div class="w-full md:w-1/3">
                                    <Image
                                        src={exp.image}
                                        alt={exp.title}
                                        loading="lazy"
                                        class="w-full aspect-video object-cover rounded-lg shadow-md"
                                    />
                                </div>
                                <!-- Experience Details -->
                                <div class="w-full md:w-2/3 space-y-3">
                                    <p class="text-sm text-gray-500">{exp.date}</p>
                                    <h3 class="text-2xl font-semibold text-[#0A192F]">{exp.title}</h3>
                                    <p class="text-lg font-medium text-[#1E3A8A]">{exp.company}</p>
                                    <p class="text-gray-700 text-sm">{exp.summary}</p>
                                    <p class="text-gray-600 text-xs">{exp.technologies}</p>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </section>

            <!-- Projects Section -->
            <section id="projects">
                <h2 class="text-4xl font-bold mb-10 text-[#0A192F]">Projects</h2>
                <div class="space-y-12">
                    {projects.filter(proj => proj.showcase).map((proj) => (
                        <a href={proj.projectLink} target="_blank" rel="noopener noreferrer" class="block">
                            <div class="flex flex-col md:flex-row items-center gap-6 bg-white p-6 rounded-lg shadow-lg hover:bg-[#E3E3E3] transition">
                                <!-- Project Image (Fixed Size) -->
                                <div class="w-full md:w-1/3">
                                    <Image
                                        src={proj.image}
                                        alt={proj.title}
                                        loading="lazy"
                                        class="w-full aspect-video object-cover rounded-lg shadow-md"
                                    />
                                </div>
                                <!-- Project Details -->
                                <div class="w-full md:w-2/3 space-y-3">
                                    <h3 class="text-2xl font-semibold text-[#0A192F]">{proj.title}</h3>
                                    <p class="text-gray-700 text-sm">{proj.summary}</p>
                                    <p class="text-gray-600 text-xs">{proj.technologies}</p>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </section>
        </main>
    </div>
</body>
</html>