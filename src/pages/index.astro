---
import experiences from "../data/experience.ts";
import projects from "../data/projects.ts";

const avatar = "/avatar.png"; // Avatar for landing page
---

<html lang="en" class="scroll-smooth">
<body class="bg-[#0a192f] text-white">
    <!-- Landing Page (Hero Section) -->
    <section id="about" class="h-screen flex flex-col md:flex-row items-center justify-between px-8 md:px-20 text-white bg-[#0a192f]">
        <!-- Left Side: Introduction -->
        <div class="text-left space-y-4 max-w-lg">
            <span class="bg-gray-700 text-white text-xs font-semibold px-3 py-1 rounded-full">
                Software Engineer • Tech Enthusiast • Problem Solver
            </span>

            <h1 class="text-5xl font-bold">
                Hi! My name is <br> 
                <span class="text-blue-400">Zhi Yang Chen</span>
            </h1>
            <p class="text-lg text-gray-300">Passionate about building scalable applications and solving complex problems.</p>

            <div class="flex space-x-4 mt-4">
                <a href="#experience" class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600">
                    Experience
                </a>
                <a href="#projects" class="px-6 py-3 border border-white text-white font-semibold rounded-lg hover:bg-gray-800">
                    Projects
                </a>
            </div>
        </div>

        <!-- Right Side: Avatar -->
        <div class="w-64 h-64 bg-gradient-to-br from-blue-500 to-blue-700 rounded-3xl flex items-center justify-center shadow-xl">
            <img src={avatar} alt="Avatar" class="w-48 h-48 rounded-full">
        </div>
    </section>

    <!-- Main Layout (Sidebar + Content) -->
    <div class="flex max-w-7xl mx-auto px-6">

        <!-- Left Sidebar (1/3 Screen) -->
        <aside class="w-1/3 min-h-screen flex flex-col justify-between py-20 sticky top-0">
            <div>
                <h1 class="text-5xl font-bold leading-tight">Zhi Yang Chen</h1>
                <p class="text-gray-400 mt-4">Software Engineer | Tech Enthusiast</p>
            </div>
            <nav class="mt-8 space-y-4">
                <a href="#about" class="block text-gray-400 hover:text-white transition"> About</a>
                <a href="#experience" class="block text-gray-400 hover:text-white transition">Experience</a>
                <a href="#projects" class="block text-gray-400 hover:text-white transition">Projects</a>
            </nav>
            <div class="mt-auto space-x-4">
                <a href="https://github.com" class="text-gray-400 hover:text-white">GitHub</a>
                <a href="https://linkedin.com" class="text-gray-400 hover:text-white">LinkedIn</a>
            </div>
        </aside>

        <!-- Right Content (2/3 Screen) -->
        <main class="w-2/3 py-20 space-y-20">
            <!-- Experience Section -->
            <section id="experience">
                <h2 class="text-4xl font-bold mb-10">Experience</h2>
                <div class="space-y-12">
                    {experiences.map((exp) => (
                        <a href={exp.companyLink} target="_blank" rel="noopener noreferrer" class="block">
                            <div class="flex flex-col md:flex-row items-center gap-6 bg-[#112240] p-6 rounded-lg shadow-lg hover:bg-[#233554] transition">
                                <!-- Experience Image -->
                                <div class="w-full md:w-1/3">
                                    <img src={exp.image} alt={exp.title} class="w-full h-40 object-cover rounded-lg shadow-md">
                                </div>
            
                                <!-- Experience Details -->
                                <div class="w-full md:w-2/3 space-y-3">
                                    <p class="text-sm text-gray-400">{exp.date}</p>
                                    <h3 class="text-2xl font-semibold">{exp.title} @ <span class="text-blue-400">{exp.company}</span></h3>
                                    <p class="text-gray-300 text-sm">{exp.summary}</p>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </section>            

            <!-- Projects Section -->
            <section id="projects">
                <h2 class="text-4xl font-bold mb-10">Projects</h2>
                <div class="space-y-12">
                    {projects.map((proj) => (
                        <a href={proj.projectLink} target="_blank" rel="noopener noreferrer" class="block">
                            <div class="flex flex-col md:flex-row items-center gap-6 bg-[#112240] p-6 rounded-lg shadow-lg hover:bg-[#233554] transition">
                                <!-- Project Image -->
                                <div class="w-full md:w-1/3">
                                    <img src={proj.image} alt={proj.title} class="w-full h-40 object-cover rounded-lg shadow-md">
                                </div>

                                <!-- Project Details -->
                                <div class="w-full md:w-2/3 space-y-3">
                                    <h3 class="text-2xl font-semibold">{proj.title}</h3>
                                    <p class="text-gray-300 text-sm">{proj.summary}</p>
                                    <p class="text-gray-400 text-xs">Technologies: {proj.technologies}</p>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </section>
        </main>
    </div>
</body>
</html>